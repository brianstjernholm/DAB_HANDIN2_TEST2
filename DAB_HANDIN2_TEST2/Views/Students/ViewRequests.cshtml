@model IEnumerable<DAB2.models.Helprequest>

@{
    ViewData["Title"] = "ViewRequests";
}

<h1>ViewRequests</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HelprequestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment.AssignmentId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HelprequestId)
            </td>
            <td>
                @(ViewData ["name"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentId)
            </td>
            <td>
                <a asp-controller="Helprequests" asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                @Html.ActionLink("Details", "Details", new { id = item.HelprequestId }) |
                @Html.ActionLink("Delete", "Details", new { id = item.HelprequestId }) |
            </td>
        </tr>
}
    </tbody>
</table>
