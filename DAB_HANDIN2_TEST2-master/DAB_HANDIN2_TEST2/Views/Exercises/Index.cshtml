@model IEnumerable<DAB2.models.Exercise>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-controller="Exercises" asp-action="Index">
    <p>
        Search for a teacher by (First name): <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
