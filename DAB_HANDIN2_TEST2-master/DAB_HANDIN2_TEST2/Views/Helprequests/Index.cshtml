@model IEnumerable<DAB2.models.Helprequest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <p>
            Antal åbne requests:@ViewBag.OpenCounter
        </p>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HelprequestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOpen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HelprequestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assignment.AssignmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOpen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HelprequestId">Edit</a> |

                <a asp-action="Delete" asp-route-id="@item.HelprequestId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>


 